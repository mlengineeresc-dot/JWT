//find prime 
function isPrime(n){
    if(n<=1) return false
    for(let i=2;i<n;i++){
        if(n%i===0){
            return false
        }
    }return true
    
}
// console.log(isPrime(6))

//find next prime 
function nextPrime(n){
    let num=n+1;
    while(true){
        if(isPrime(num)) return num
        num++
    }
    
}
console.log(nextPrime(4))
